  "panels": [
    {
      "id": 10,
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "type": "row",
      "title": "CPU & Memory Performance",
      "collapsed": false
    },
    {
      "id": 11,
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 1
      },
      "type": "timeseries",
      "title": "CPU Usage Total (%)",
      "description": "Total CPU utilization",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode='idle', instance=~'$instance'}[1m])) * 100)",
          "legendFormat": "CPU Usage",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "opacity"
          },
          "unit": "percent"
        },
        "overrides": []
      },
      "datasource": "Prometheus"
    },
    {
      "id": 12,
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 1
      },
      "type": "timeseries",
      "title": "RAM Usage (%)",
      "description": "Memory usage",
      "targets": [
        {
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes{instance=~'$instance'} / node_memory_MemTotal_bytes{instance=~'$instance'}))",
          "legendFormat": "RAM Used",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "opacity"
          },
          "unit": "percent"
        },
        "overrides": []
      },
      "datasource": "Prometheus"
    },
    {
      "id": 13,
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 1
      },
      "type": "timeseries",
      "title": "Page Faults (Major)",
      "description": "Major page faults imply disk swapping",
      "targets": [
        {
          "expr": "rate(node_vmstat_pgmajfault{instance=~'$instance'}[1m])",
          "legendFormat": "Major Faults/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "opacity"
          },
          "unit": "short"
        },
        "overrides": []
      },
      "datasource": "Prometheus"
    },
    {
      "id": 20,
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 9
      },
      "type": "row",
      "title": "GPU AI Performance (DCGM)",
      "collapsed": false
    },
    {
      "id": 21,
      "gridPos": {
        "h": 9,
        "w": 8,
        "x": 0,
        "y": 10
      },
      "type": "timeseries",
      "title": "GPU & Tensor Core Util",
      "description": "Utilization",
      "targets": [
        {
          "expr": "avg by (gpu) (DCGM_FI_DEV_GPU_UTIL{gpu=~'$gpu'})",
          "legendFormat": "GPU {{gpu}} Util",
          "refId": "A"
        },
        {
          "expr": "avg by (gpu) (DCGM_FI_PROF_PIPE_TENSOR_ACTIVE{gpu=~'$gpu'})",
          "legendFormat": "GPU {{gpu}} Tensor",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "opacity"
          },
          "unit": "percent"
        },
        "overrides": []
      },
      "datasource": "Prometheus"
    },
    {
      "id": 22,
      "gridPos": {
        "h": 9,
        "w": 8,
        "x": 8,
        "y": 10
      },
      "type": "timeseries",
      "title": "GPU Power & Temp",
      "description": "Power & Thermal",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_POWER_USAGE{gpu=~'$gpu'}",
          "legendFormat": "GPU {{gpu}} Power (W)",
          "refId": "A"
        },
        {
          "expr": "DCGM_FI_DEV_GPU_TEMP{gpu=~'$gpu'}",
          "legendFormat": "GPU {{gpu}} Temp (C)",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "opacity"
          },
          "unit": "watt"
        },
        "overrides": []
      },
      "datasource": "Prometheus"
    },
